{
  "manifest_version": 3,
  "name": "Screenshot + Sketch Notes",
  "description": "Capture a page, sketch/annotate over it and save notes.",
  "version": "1.2",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Screenshot + Sketch Notes",
    "default_popup": "popup.html"
  }
}
